{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "root/*": ["src/*"],
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "widgets/*": ["src/widgets/*"],
      "utils/*": ["src/utils/*"],
      "hooks/*": ["src/hooks/*"],
      "styles/*": ["src/styles/*"],
      "modules/*": ["src/modules/*"],
      "vendor/*": ["vendor/*"],
      "mocks/*": ["src/mocks/*"],
      "containers/*": ["src/containers/*"],
      "constant/*": ["src/constant/*"],
      "helpers/*": ["src/helpers/*"],
      "static/*": ["src/static/*"],
      "specs/*": ["src/specs/*"],
      "context/*": ["src/context/*"],
      "testUtils/*": ["src/testUtils/*"],
      "decorators/*": ["src/decorators/*"]
    },
    "typeRoots": ["./src/defines", "./node_modules/@types", "./src/sdk/defines"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
